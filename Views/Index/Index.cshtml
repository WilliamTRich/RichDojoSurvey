<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <title>Hello!</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

</head>

<body>
    <div class="container d-flex flex-column">

        @model RichDojoSurvey.Models.Survey
        <form action="process" method="post" class="container d-flex flex-column">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name">
            <span asp-validation-for="Name"></span>
            <label asp-for="Dojo" class="form-label"></label>
            <select asp-for="Dojo">
                <option value="Seattle">Seattle</option>
                <option value="Burbank">Burbank</option>
            </select>
            <span asp-validation-for="Dojo"></span>
            <label asp-for="Flang" class="form-label"></label>
            <select asp-for="Flang">
                <option value="cs">C#</option>
                <option value="java">Java</option>
                <option value="python">Python</option>
            </select>
            <span asp-validation-for="Flang"></span>
            <label asp-for="Comment" class="form-label"></label>
            <textarea asp-for="Comment" cols="30" rows="10"></textarea>
            <span asp-validation-for="Comment"></span>
            <button type="submit">Submit</button>
        </form>
    </div>
</body>

</html>